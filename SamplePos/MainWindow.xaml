<Window x:Class="SamplePos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SamplePos"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Command="{Binding Path=SaveItem}"  Height="62" Margin="496,254,0,0" VerticalAlignment="Top" Width="194"/>
        <TextBox HorizontalAlignment="Left" Text="{Binding Path=ItemId}" Height="69" Margin="243,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="447" Name="IdTextBox"/>
    </Grid>
</Window>
